        <variable
            name="viewModel"
            type="com.example.scoutmediaplayer.viewmodel.PlayerFragmentViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
